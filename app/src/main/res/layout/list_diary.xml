<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#BA0404"
        android:id="@+id/tv_listdiary_date"
        android:layout_marginLeft="5sp"
        android:textSize="25sp"
        android:text="30/10/2021"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ImageDeleteJob"
        android:layout_alignParentRight="true"
        android:src="@drawable/icondelete"
        android:layout_width="wrap_content"
        android:layout_height="35dp"/>

    <ImageView
        android:id="@+id/ImageEditJob"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/ImageDeleteJob"
        android:src="@drawable/iconrepare" />
    <TextView
        android:id="@+id/tv_listdiary_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/tv_listdiary_date"
        android:textSize="20sp"
        android:text="nội dung công việc cần phải làm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>